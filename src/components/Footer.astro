---
// Import config for social links
const config = await import('../../data/config.json');
const socialLinks = config.default.socialLinks;
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          Â© {new Date().getFullYear()} Colin. Built with <a href="https://astro.build" class="text-primary-600 hover:text-primary-700">Astro</a> & <a href="https://tailwindcss.com" class="text-primary-600 hover:text-primary-700">Tailwind CSS</a>.
        </p>
      </div>
      
      <div class="flex space-x-6">
        {socialLinks.map(link => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
