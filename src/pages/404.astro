---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Not Found" description="Oops! This page doesn't exist.">
  <Navbar />
  
  <main class="min-h-screen flex items-center justify-center px-4 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-900 dark:to-blue-900/20">
    <div class="text-center max-w-2xl mx-auto">
      <!-- Game Over Style 404 -->
      <div class="mb-8">
        <h1 class="text-9xl font-extrabold neon-text mb-4 animate-pulse">404</h1>
        <div class="text-6xl mb-6">ğŸ®</div>
      </div>
      
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Game Over!
      </h2>
      
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
        Looks like you've wandered into uncharted territory. This page doesn't exist... yet!
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={import.meta.env.BASE_URL + '/'}
          class="btn-primary inline-flex items-center space-x-2 justify-center"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span>Return Home</span>
        </a>
        
        <a
          href={import.meta.env.BASE_URL + '/projects/'}
          class="btn-secondary inline-flex items-center space-x-2 justify-center"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7H3a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2z" />
          </svg>
          <span>View Projects</span>
        </a>
      </div>
      
      <!-- Fun Error Messages -->
      <div class="mt-12 p-6 bg-white/50 dark:bg-gray-800/50 rounded-lg backdrop-blur-sm">
        <p class="text-gray-600 dark:text-gray-400 italic">
          "It's dangerous to go alone! Take this link back home." ğŸ—¡ï¸
        </p>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>