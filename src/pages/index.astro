---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getImage } from 'astro:assets';

// Import config for personal info
const config = await import('../../data/config.json');
const personalInfo = config.default.personalInfo;
const socialLinks = config.default.socialLinks;

// Use base for image path
const baseUrl = import.meta.env.BASE_URL;
const avatarPath = `${baseUrl}colin-avatar.jpg`;
---

<Layout title="Colin - Developer & Content Creator">
  <Navbar />
  
  <main>
    <!-- Hero Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-900 dark:to-blue-900/20">
      <div class="max-w-4xl mx-auto text-center">
        <div class="mb-8">
          <img
            src={avatarPath}
            alt="Colin's photo"
            class="w-36 h-36 rounded-full mx-auto mb-8 shadow-2xl border-4 border-primary-500/20 tech-glow hover:scale-110 transition-transform duration-300"
            loading="eager"
          />
          <h1 class="text-4xl sm:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
            Hey, I'm <span class="neon-text font-extrabold">Colin</span>
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
            {personalInfo.bio}
          </p>
        </div>
        
        <div class="flex flex-wrap justify-center gap-6">
          {socialLinks.map(link => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary inline-flex items-center space-x-3 text-lg"
            >
              {link.name === 'YouTube' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 0C4.477 0 0 4.477 0 10s4.477 10 10 10 10-4.477 10-10S15.523 0 10 0zm3.7 10.8l-4.4 2.5c-.3.2-.7 0-.7-.4V7.1c0-.4.4-.6.7-.4l4.4 2.5c.3.2.3.6 0 .8z"/>
                </svg>
              )}
              {link.name === 'GitHub' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                </svg>
              )}
              {link.name === 'Twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"/>
                </svg>
              )}
              <span>{link.name}</span>
            </a>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Quick Links Section -->
    <section class="py-20 bg-white dark:bg-gray-800 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-primary-50/50 to-gaming-50/50 dark:from-primary-900/20 dark:to-gaming-900/20"></div>
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
            What I <span class="neon-text">Do</span>
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Explore my projects, download useful tools, and connect with me across platforms.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-10">
          <a
            href={`${import.meta.env.BASE_URL}/projects/`}
            class="card p-10 hover:scale-[1.05] transition-all duration-300 group tech-glow"
          >
            <div class="flex items-center space-x-4 mb-6">
              <div class="p-4 bg-gradient-to-br from-primary-100 to-primary-200 dark:from-primary-900 dark:to-primary-800 rounded-xl gaming-gradient">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7H3a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2z" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                My Projects
              </h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300">
              Browse through my GitHub repositories, from web applications to game development tools.
            </p>
          </a>
          
          <a
            href={`${import.meta.env.BASE_URL}/downloads/`}
            class="card p-10 hover:scale-[1.05] transition-all duration-300 group tech-glow"
          >
            <div class="flex items-center space-x-4 mb-6">
              <div class="p-4 bg-gradient-to-br from-gaming-400 to-gaming-600 rounded-xl">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white group-hover:text-gaming-600 dark:group-hover:text-gaming-400 transition-colors">
                Downloads
              </h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300">
              Access tools, assets, and resources I've created for the community.
            </p>
          </a>
        </div>
      </div>
    </section>
    
    <!-- Skills/Tech Stack Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
            Tech <span class="neon-text">Stack</span>
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
